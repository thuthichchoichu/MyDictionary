<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/layout_colorpicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Pick a color"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/divider2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout"
            app:layout_constraintEnd_toEndOf="@+id/gridLayout"
            app:layout_constraintStart_toStartOf="@+id/gridLayout" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:rowCount="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView

                android:id="@+id/color_white"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="3dp"
                android:onClick="onClick"
                android:src="@drawable/white" />

            <ImageView
                android:id="@+id/color_red"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:onClick="onClick"
                android:src="@drawable/red" />

            <ImageView
                android:id="@+id/color_orange"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:onClick="onClick"
                android:src="@drawable/orange" />

            <ImageView
                android:id="@+id/color_yellow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:onClick="onClick"
                android:src="@drawable/yellow" />

            <ImageView
                android:id="@+id/color_green"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:onClick="onClick"
                android:src="@drawable/green" />

            <ImageView
                android:id="@+id/color_blue"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:onClick="onClick"
                android:src="@drawable/blue1" />

            <ImageView
                android:id="@+id/color_lightblue"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:onClick="onClick"
                android:src="@drawable/lightblue" />

            <ImageView
                android:id="@+id/color_darkblue"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:onClick="onClick"
                android:src="@drawable/darkblue" />

            <ImageView
                android:id="@+id/color_violet"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:background="@drawable/violet"
                android:onClick="onClick" />

            <ImageView
                android:id="@+id/color_pink"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:onClick="onClick"
                android:src="@drawable/pink" />

            <ImageView
                android:id="@+id/color_brown"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:onClick="onClick"
                android:src="@drawable/brown" />

            <ImageView
                android:id="@+id/color_gray"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="3dp"
                android:onClick="onClick"
                android:src="@drawable/gray" />


        </GridLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
