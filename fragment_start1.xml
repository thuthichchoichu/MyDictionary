<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication2.FirstStartPager.StartFragment1">

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/easy_to_use_with_eng_to_eng_with_multiples_meaning"
        android:textColor="#006AC6"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/and_eng_to_128_languages"
        android:textColor="#090909"
        android:textSize="15sp"
        android:textStyle="normal" />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/just_copy_it_and_enjoy"
        android:textColor="#838383" />

</RelativeLayout>