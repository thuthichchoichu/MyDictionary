<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.myapplication2.FirstStartPager.StartFragment1">

        <TextView
            android:gravity="center"
            android:textColor="#090909"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/these_setting_you_can_change_at_later" />

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_autopopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auto_pop_result_up_when_text_translated" />

            <TextView
                android:layout_below="@id/txt_autopopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/off" />


            <androidx.appcompat.widget.SwitchCompat
                android:theme="@style/SCBSwitch"
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:shadowColor="@color/lightblue" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner"
                android:layout_toRightOf="@+id/txt_SetUpLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp" />

            <TextView
                android:id="@+id/txt_SetUpLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Set your languages translate to" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Using Google translate when number of word \n has reach to"/>

            <EditText
                android:id="@+id/edt_lengToTrans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:text="2" />
        </RelativeLayout>


    </LinearLayout>
</layout>